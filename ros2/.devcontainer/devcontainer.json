{
	"name": "ros2",
	"image": "ros2",
	"privileged": true,
	"mounts": [
		{
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix",
			"type": "bind"
		}
	],
	"containerEnv": {
		"DISPLAY": ":1"
	},
	"runArgs": [
		"--network",
		"host"
	],
	"customizations": {
		"vscode": {
			"extensions": [
				"PKief.material-icon-theme",
				"MS-CEINTL.vscode-language-pack-zh-hans",
				"llvm-vs-code-extensions.vscode-clangd",
				"Gruntfuggly.global-config",
				"xaver.clang-format",
				"ms-vscode.cpptools"
			]
		}
	}
}