{
	"name": "basic",
	"image": "basic",
	"mounts": [
		{
			"source": "/tmp/.X11-unix",
			"target": "/tmp/.X11-unix",
			"type": "bind"
		},
		{
			"source": "/dev",
			"target": "/dev",
			"type": "bind"
		}
	],
	"containerEnv": {
		"DISPLAY": ":1"
	},
	"runArgs": [
		"--network",
		"host",
		"-u",
		"ubuntu"
	]
}